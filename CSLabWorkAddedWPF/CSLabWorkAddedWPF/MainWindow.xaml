<Window x:Class="CSLabWorkAddedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSLabWorkAddedWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="525">
    <Grid HorizontalAlignment="Center">
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.RowSpan="2" Grid.Row="0" >
            <Label>Login</Label>
            <TextBox x:Name="Login"></TextBox>
            <Label>Password</Label>
            <TextBox x:Name="Password"></TextBox>
            <Label>Email</Label>
            <TextBox x:Name="Email"></TextBox>
            <Label>Age</Label>
            <TextBox x:Name="Age"></TextBox>
            <Label>PhoneNumber</Label>
            <TextBox x:Name="PhoneNumber"></TextBox>
        </StackPanel>
        
        <StackPanel Grid.Row="2">
            <Button Height="20px" Click="Submit_OnClick" x:Name="Submit">Submit</Button>
            <Button Height="20px" Click="ShowUsers_OnClick" x:Name="users">ShowUsers</Button>
        </StackPanel>
    </Grid>
</Window>
