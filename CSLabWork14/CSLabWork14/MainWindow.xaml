<Window x:Class="CSLabWork14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSLabWork14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>        
        
        <StackPanel Grid.Column="1">
            <Label HorizontalAlignment="Center">First Procedure</Label>
            <TextBox x:Name="FirstProcedure"></TextBox>
            <Label HorizontalAlignment="Center">Second Procedure</Label>
            <TextBox x:Name="SecondProcedure"></TextBox>
            <Label HorizontalAlignment="Center">Amount of procedures?</Label>
            <TextBox x:Name="Counter"></TextBox>
            <Button Height="20px" Margin="20,20" Click="Solve">Solve</Button>
            
            <Label x:Name="Ouput" Background="Bisque"></Label>
        </StackPanel>
        <Button Grid.Column="2" Click="ToSecondTask" Height="20px" Width="140px">Next Task</Button>
    </Grid>
</Window>
