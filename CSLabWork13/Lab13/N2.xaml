<Window x:Class="Lab13.N2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Lab13"
        mc:Ignorable="d"
        Title="N2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel  VerticalAlignment="Center">
            <TextBox x:Name="Choose" Height="20px"></TextBox>
            <Label Background="Bisque" x:Name="Label"></Label>
            <Button  Click="ButtonBase_OnClick"  Height="20px"></Button>
        </StackPanel>
        <Button Grid.Column="2" Click="Next_OnClick" Height="20px"> Next task</Button>
    </Grid>
</Window>
